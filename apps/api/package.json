{
  "name": "@nosql-reco/api",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "test": "jest",
    "test:e2e": "jest --config jest.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "seed": "ts-node src/scripts/seed.ts",
    "reco:precompute": "ts-node src/reco/jobs/precompute.ts",
    "openapi:gen": "ts-node src/scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^10.0.2",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/static": "^7.0.0",
    "@fastify/swagger": "^8.9.1",
    "@fastify/swagger-ui": "^2.1.4",
    "@faker-js/faker": "^8.3.1",
    "argon2": "^0.31.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "fastify-request-context": "^4.0.1",
    "fastify-sensible": "^5.5.0",
    "fastify-metrics": "^10.0.0",
    "mongoose": "^8.1.1",
    "pino": "^8.17.0",
    "pino-http": "^9.0.0",
    "redis": "^4.6.13",
    "ulid": "^2.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "fastify-type-provider-zod": "^1.1.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
